@model IEnumerable<Practice.Models.Department>

@{
    ViewData["PageTitle"] = "Department page";
}

<p>
    <a asp-action="Add">Create New</a> | 
    <a asp-action="Index" asp-controller="Product">To All Students List</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Shop)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Shop.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a href="@Url.Action("ProductList", "Product", new { departmentId = item.Id })">List of student for this group</a>
                </td>
            </tr>
        }
    </tbody>
</table>
